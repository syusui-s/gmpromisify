{
  "name": "@syusui-s/gmpromisify",
  "version": "0.1.8",
  "description": "Promise wrapper for GreaseMonkey/TamperMonkey",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c && tsc -p tsconfig.build.json",
    "prepare": "husky install",
    "lint": "prettier --check . && eslint --cache .",
    "fix": "eslint --cache --fix . && prettier --write .",
    "eslint": "eslint --cache .",
    "prettier": "prettier --write .",
    "tsc": "tsc --noEmit",
    "test": "vitest run --no-watch",
    "clean": "rm -rf dist"
  },
  "author": "Shusui Moyatani",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/greasemonkey": "^4.0.7",
    "@types/node": "^22.13.4",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rollup": "^4.34.8",
    "rollup-plugin-banner2": "^1.3.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html",
      "text"
    ],
    "sourceMap": true,
    "all": true
  }
}
